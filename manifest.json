{
  "name": "notion-books",
  "description": "Notion の読書記録に本を追加するための Chrome 拡張機能。",
  "version": "0.1.0",
  "manifest_version": 3,
  "host_permissions": [
    "https://api.notion.com/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "storage"
  ]
}
